body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2
  margin 30px 0 0 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 40px
a
	color #1ca1a3
	text-decoration none
#articles
  text-align left
  margin-left auto
  margin-right auto
  width 320px
  .article
    margin 20px
    .created_at
        display none
    .title
      a
        line-height 40px
      font-weight bold
      padding-left 20px
      background-color #d2eced
      .body
        background-color #fff3bf
        padding 20px